*
	margin 0
	padding 0

@font-face
	font-family CarbonBlock
	src url('/img/CarbonBlock.ttf')	
body
	font-family verdana
	font-size 16px
	background #EBEBEB

header	
	background #966FD6
	box-shadow 0px 5px 5px #888;
	color #ffffff
	font-family CarbonBlock
	font-size 48px
	height 100px
	letter-spacing 5px
	text-align center
	text-shadow 0 1px 0 #ccc, 
               0 2px 0 #c9c9c9,
               0 3px 0 #bbb,
               0 4px 0 #b9b9b9,
               0 5px 0 #aaa,
               0 6px 1px rgba(0,0,0,.1),
               0 0 5px rgba(0,0,0,.1),
               0 1px 3px rgba(0,0,0,.3),
               0 3px 5px rgba(0,0,0,.2),
               0 5px 10px rgba(0,0,0,.25),
               0 10px 10px rgba(0,0,0,.2),
               0 20px 20px rgba(0,0,0,.15)
	width 100%

#wrapper	
	background-color #ffffff
	bottom 10px
	display block
	left 10px
	overflow hidden
	position absolute
	right 10px
	top 115px

#content-left	
	float left
	height 100%
	position relative
	width 30%

#inside-top
	height 120px

#search-panel
	background-color #FFA10D
	margin 15px
	height 80px
	display block

#inside-bottom
	bottom 0px
	left 0px
	overflow-x hidden
	overflow-y auto
	position absolute
	right 0px
	top 120px

#content-right
	height 100%
	float right
	overflow-x: hidden
	overflow-y: auto
	width 70%

.box
	display block
	height 100px
	padding 8px
	margin 10px


	h3
		text-align right

footer
	bottom 13px
	color #999
	font-size 0.8em
	left 20px
	position fixed
	text-align right