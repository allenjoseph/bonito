*
	margin 0
	padding 0

@font-face
	font-family CarbonBlock
	src url('/img/CarbonBlock.ttf')	
body
	font-family verdana
	font-size 16px
	background #EBEBEB

header	
	height 100px
	width 100%
	background #966FD6
	text-align center
	color #ffffff
	font-family CarbonBlock
	font-size 48px
	letter-spacing 5px
	box-shadow 0px 5px 5px #888;
	text-shadow 0 1px 0 #ccc, 
               0 2px 0 #c9c9c9,
               0 3px 0 #bbb,
               0 4px 0 #b9b9b9,
               0 5px 0 #aaa,
               0 6px 1px rgba(0,0,0,.1),
               0 0 5px rgba(0,0,0,.1),
               0 1px 3px rgba(0,0,0,.3),
               0 3px 5px rgba(0,0,0,.2),
               0 5px 10px rgba(0,0,0,.25),
               0 10px 10px rgba(0,0,0,.2),
               0 20px 20px rgba(0,0,0,.15)
#content
	position relative
	margin-top 15px
	background-color #ffffff
#content-right
	background-color #779ECB 
	min-height 300px
	float right
footer
	position absolute
	bottom 10px
	color #999
	font-size 0.8em
	text-align right
	right 10px